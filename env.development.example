# ============================================
# PERFECT SALON - Development Environment
# ============================================
# Configurações para desenvolvimento local
# Copie para .env.local e ajuste conforme necessário

# Frontend
VITE_API_BASE_URL=http://localhost:3001/api
VITE_GOOGLE_CLIENT_ID=your_dev_google_client_id.apps.googleusercontent.com
VITE_ENVIRONMENT=development

# Backend
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Local (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/perfectsalon_dev
DATABASE_SSL=false

# JWT (use valores diferentes em produção!)
JWT_SECRET=dev_jwt_secret_key_min_32_characters_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=dev_refresh_secret_different_key
JWT_REFRESH_EXPIRES_IN=30d

# Google OAuth (Development)
GOOGLE_CLIENT_ID=your_dev_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_dev_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3001/api/auth/google/callback

# WhatsApp (Mock ou Development API)
WHATSAPP_API_URL=http://localhost:8080
WHATSAPP_PHONE_NUMBER_ID=dev_phone_number_id
WHATSAPP_ACCESS_TOKEN=dev_access_token

# Gemini AI
GEMINI_API_KEY=your_dev_gemini_api_key

# Email (opcional em dev - pode usar Mailtrap ou similar)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=your_mailtrap_user
SMTP_PASS=your_mailtrap_pass
EMAIL_FROM=dev@perfectsalon.local

# Redis (opcional em dev)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=debug
SENTRY_DSN=

# Storage Local
STORAGE_TYPE=local
STORAGE_PATH=./uploads

