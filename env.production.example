# ============================================
# PERFECT SALON - Production Environment
# ============================================
# Configurações para produção
# IMPORTANTE: Use gerenciador de secrets em produção!
# NUNCA commite este arquivo com valores reais

# Frontend
VITE_API_BASE_URL=https://api.yourdomain.com
VITE_GOOGLE_CLIENT_ID=your_prod_google_client_id.apps.googleusercontent.com
VITE_ENVIRONMENT=production

# Google Calendar (quando backend estiver pronto)
# As mesmas credenciais do Google OAuth serão usadas

# Backend
NODE_ENV=production
PORT=3001
FRONTEND_URL=https://yourdomain.com

# Database Production (PostgreSQL com SSL)
DATABASE_URL=postgresql://user:password@db-host:5432/perfectsalon?sslmode=require
DATABASE_SSL=true

# JWT Secrets (GERE NOVOS VALORES ÚNICOS!)
# Use: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_RANDOM_32_CHAR_MIN_SECRET_IN_PRODUCTION
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=CHANGE_THIS_TO_DIFFERENT_RANDOM_SECRET
JWT_REFRESH_EXPIRES_IN=7d

# Google OAuth (Production)
GOOGLE_CLIENT_ID=your_prod_google_client_id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_prod_google_client_secret
GOOGLE_REDIRECT_URI=https://api.yourdomain.com/api/auth/google/callback

# Google Calendar API (usa as mesmas credenciais do OAuth acima)
GOOGLE_CALENDAR_SCOPES=https://www.googleapis.com/auth/calendar
GOOGLE_CALENDAR_TIMEZONE=America/Sao_Paulo
GOOGLE_CALENDAR_ID=primary

# WhatsApp Business API (Production)
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_NUMBER_ID=your_prod_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_prod_access_token
WHATSAPP_VERIFY_TOKEN=your_prod_webhook_verify_token

# Gemini AI (Production)
GEMINI_API_KEY=your_prod_gemini_api_key

# Email Production (SendGrid, AWS SES, ou SMTP confiável)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=your_sendgrid_api_key
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Perfect Salon

# Redis Production
REDIS_URL=redis://:password@redis-host:6379
REDIS_PASSWORD=your_redis_password
REDIS_TTL=3600

# File Storage (AWS S3 ou Cloudinary)
STORAGE_TYPE=s3
AWS_S3_BUCKET_NAME=perfect-salon-uploads-prod
AWS_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# Logging & Monitoring
LOG_LEVEL=info
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
WEBHOOK_SECRET=your_production_webhook_secret

# Feature Flags
ENABLE_WHATSAPP=true
ENABLE_GOOGLE_CALENDAR=true
ENABLE_GEMINI_AI=true
ENABLE_2FA=true

